\begin_layout Paragraph
Proposition 2.1.6
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\overline{A}=\left\{ x:\exists\left(x_{n}\right)\subseteq X\ s.t.\ x_{n}\to x\right\} ,
\]

\end_inset

即
\begin_inset Formula $A$
\end_inset

的闭包是其极限点集.
\end_layout

\begin_layout Standard
稠密, 连续函数, 同胚
\end_layout

\begin_layout Paragraph
Proposition 2.1.9
\end_layout

\begin_layout Standard
以下命题等价
\end_layout

\begin_layout Standard
1.
 
\begin_inset Formula $f$
\end_inset

连续;
\end_layout

\begin_layout Standard
2.
 
\begin_inset Formula $U$
\end_inset

开蕴含
\begin_inset Formula $f^{-1}(U)$
\end_inset

开;
\end_layout

\begin_layout Standard
3.
 
\begin_inset Formula $F$
\end_inset

闭蕴含
\begin_inset Formula $f^{-1}(F)$
\end_inset

闭.
\end_layout

\begin_layout Paragraph
同胚的例子
\end_layout

\begin_layout Standard
\begin_inset Formula $\RR\simeq S^{1}\setminus\left\{ 1\right\} $
\end_inset

, 用Cayley变换, 球极投影
\begin_inset Formula 
\[
f(x)=\frac{x+\ui}{x-\ui};\qquad g(z)=\frac{\ui(z+1)}{z-1}.
\]

\end_inset

其中, 
\begin_inset Formula $f(x)$
\end_inset

是
\begin_inset Formula $1$
\end_inset

与
\begin_inset Formula $x\ui$
\end_inset

连成的直线与
\begin_inset Formula $S^{1}$
\end_inset

的交点.
 
\begin_inset Formula $g(x)=f^{-1}(x)$
\end_inset

.
\end_layout

\begin_layout Paragraph
Theorem 2.1.10
\end_layout

\begin_layout Standard
若
\begin_inset Formula $U$
\end_inset

是
\begin_inset Formula $\RR$
\end_inset

中的开有界集, 则
\begin_inset Formula $U$
\end_inset

可以表示为不交开集的可数并.
\end_layout

\begin_layout Standard
用
\begin_inset Formula 
\[
U=\bigsqcup_{n}I_{n}
\]

\end_inset

表示
\begin_inset Formula $U$
\end_inset

的不交并分解.
\end_layout

