\begin_inset Formula $E$
\end_inset

上的范数.
\end_layout

\begin_layout Standard
Hilbert空间
\end_layout

\begin_layout Paragraph
平行四边形法则
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\norm{x+y}^{2}+\norm{x-y}^{2}=2\left(\norm{x}^{2}+\norm{y}^{2}\right).
\]

\end_inset


\end_layout

\begin_layout Paragraph
极化恒等式
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left\langle x,y\right\rangle =\frac{1}{4}\left(\norm{x+y}^{2}-\norm{x-y}^{2}+\ui\norm{x+\ui y}^{2}-\ui\norm{x-\ui y}^{2}\right).
\]

\end_inset


\end_layout

\begin_layout Paragraph
在实空间中
\begin_inset Formula 
\[
\left\langle x,y\right\rangle =\frac{1}{4}\left(\norm{x+y}^{2}-\norm{x-y}^{2}\right).
\]

\end_inset


\end_layout

\begin_layout Paragraph
更一般的极化恒等式
\end_layout

\begin_layout Standard
设
\begin_inset Formula $\omega=\ue^{\frac{2\pi\ui}{n}}$
\end_inset

, 则
\begin_inset Formula 
\[
\left\langle x,y\right\rangle =\frac{1}{n}\sum_{k=0}^{n-1}\omega^{k}\norm{x+\omega^{k}y}^{2}.\qquad n\ge3.
\]

\end_inset

令
\begin_inset Formula $n\to\infty$
\end_inset

, 得到
\begin_inset Formula 
\[
\left\langle x,y\right\rangle =\frac{1}{2\pi}\int_{0}^{2\pi}\ue^{\ui\theta}\norm{x+\ue^{\ui\theta}y}^{2}\ud\theta.
\]

\end_inset


\end_layout

