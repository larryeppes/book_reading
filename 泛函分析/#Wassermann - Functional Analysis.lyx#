\end_layout

\begin_layout Standard
最近邻点与投影定理
\end_layout

\begin_layout Paragraph
Theorem 4.1.1
\end_layout

\begin_layout Standard
设
\begin_inset Formula $E$
\end_inset

是内积空间, 
\begin_inset Formula $C$
\end_inset

是
\begin_inset Formula $E$
\end_inset

的完备凸子集.
 则对于任意给定的
\begin_inset Formula $x\in E\setminus C$
\end_inset

, 存在唯一的点
\begin_inset Formula $a\in C$
\end_inset

使得
\begin_inset Formula 
\[
\norm{x-a}=\inf_{y\in C}\norm{x-y}.
\]

\end_inset

进而, 对于任意的
\begin_inset Formula $y\in C$
\end_inset

, 恒有
\begin_inset Formula 
\[
\mathrm{Re}\left\langle x-a,y-a\right\rangle \le0
\]

\end_inset

且
\begin_inset Formula $a$
\end_inset

由此性质唯一决定.
 
\begin_inset Formula $C$
\end_inset

的所有点位于通过
\begin_inset Formula $a$
\end_inset

的垂直超平面的一边.
\end_layout

\begin_layout Standard
证明使用平行四边形法则.
\end_layout

\begin_layout Paragraph
Corollary 4.1.2
\end_layout

\begin_layout Standard
假设
\begin_inset Formula $M$
\end_inset

是内积空间
\begin_inset Formula $E$
\end_inset

的完备线性子空间.
 若
\begin_inset Formula $x\in E\setminus M$
\end_inset

, 则存在唯一的点
\begin_inset Formula $a\in M$
\end_inset

使
\begin_inset Formula $\norm{x-a}$
\end_inset

达到最小值, 并可以由性质
\begin_inset Formula 
\[
x-a\perp M
\]

\end_inset

唯一刻画.
\end_layout

\begin_layout Standard
证明使用上述定理+线性空间运算的封闭性.
\end_layout

\begin_layout Paragraph
Corollary 4.1.3
\end_layout

\begin_layout Standard
假设
\begin_inset Formula $M$
\end_inset

是内积空间
\begin_inset Formula $E$
\end_inset

完备线性子空间.
 则
\begin_inset Formula 
\[
E=M\oplus M^{\perp}.
\]

\end_inset


\end_layout

\begin_layout Standard
正交投影的定义
\end_layout

\begin_layout Paragraph
性质:
\end_layout

\begin_layout Standard
1.
 设
\begin_inset Formula $E$
\end_inset

是完备空间, 
\begin_inset Formula $M$
\end_inset

是闭线性空间, 则
\begin_inset Formula $M$
\end_inset

也完备.
\begin_inset Formula 
\[
E=M\oplus M^{\perp}\Longrightarrow M^{\perp\perp}=M.
\]

\end_inset


\end_layout

\begin_layout Standard
算子
\begin_inset Formula $M\mapsto M^{\perp}$
\end_inset

有如下性质
\end_layout

\begin_layout Standard
(a).
 
\begin_inset Formula $A\subseteq B\Longrightarrow A^{\perp}\supseteq B^{\perp}$
\end_inset

.
\end_layout

\begin_layout Standard
(b).
 若
\begin_inset Formula $S\subseteq E$
\end_inset

, 则
\begin_inset Formula $S^{\perp\perp}=\overline{\mathrm{span}S}$
\end_inset

.
\end_layout

\begin_layout Standard
(c).
 
\begin_inset Formula $(A+B)^{\perp}=A^{\perp}\cap B^{\perp}$
\end_inset

.
\end_layout

\begin_layout Standard
(d).
 
\begin_inset Formula $(A\cap B)^{\perp}=\overline{A^{\perp}+B^{\perp}}$
\end_inset

.
\end_layout

\begin_layout Standard
2.
 
\begin_inset Formula $\RR^{n}$
\end_inset

中的紧凸子集
\begin_inset Formula $C$
\end_inset

, 若
\begin_inset Formula $x\in C$
\end_inset

不在位于
\begin_inset Formula $C$
\end_inset

内的任何线段的内部, 则称
\begin_inset Formula $x$
\end_inset

是
\begin_inset Formula $C$
\end_inset

的极点(extreme point).
\end_layout

\begin_layout Paragraph
Theorem 4.1.5 (Krein-Milman)
\end_layout

\begin_layout Standard
任何紧凸集
\begin_inset Formula $C\subseteq\RR^{n}$
\end_inset

都有极点.
 若
\begin_inset Formula $E$
\end_inset

为极点集, 则
\begin_inset Formula 
\[
C=\overline{\mathrm{conv}E},
\]

\end_inset

其中
\begin_inset Formula $\mathrm{conv}S$
\end_inset

表示
\begin_inset Formula $S$
\end_inset

中元素的凸组合.
 即形如
\begin_inset Formula $\sum\lambda_{i}s_{i}$
\end_inset

, 
\begin_inset Formula $\lambda\ge0$
\end_inset

, 
\begin_inset Formula $\sum\lambda_{i}=1$
\end_inset

的所有点集.
\end_layout

\begin_layout Standard
证明使用超平面切触的极点集+归纳法.
\end_layout

\begin_layout Subsection
Orthonormal bases and Parseval's equation
\end_layout

\begin_layout Standard
正交系, 基
\end_layout

\begin_layout Paragraph
Theorem 4.2.2 (generalised Pythagoras)
\end_layout

\begin_layout Standard
(广义毕达哥拉斯定理) 若
\begin_inset Formula $x_{i}\perp x_{j}$
\end_inset

, (
\begin_inset Formula $i\ne j$
\end_inset

), 则
\begin_inset Formula 
\[
\norm{\sum x_{i}}^{2}=\sum\norm{x_{i}}^{2}.
\]

\end_inset


\end_layout

\begin_layout Paragraph
Theorem 4.2.3 (Bessel不等式)
\end_layout

\begin_layout Standard
设
\begin_inset Formula $\left(e_{n}\right)$
\end_inset

为内积空间
\begin_inset Formula $E$
\end_inset

上的正交系.
 设
\begin_inset Formula $f\in E$
\end_inset

, 
\begin_inset Formula $a_{n}=\left\langle f,e_{n}\right\rangle $
\end_inset

.
 则
\begin_inset Formula 
\[
\norm{f}^{2}=\sum_{n=1}^{N}\left|a_{n}\right|^{2}+\norm{f-\sum_{n=1}^{N}a_{n}e_{n}}^{2},
\]

\end_inset

从而有
\begin_inset Formula 
\[
\sum_{n=1}^{\infty}\left|a_{n}\right|^{2}\le\norm{f}^{2}.
\]

\end_inset


\end_layout

\begin_layout Paragraph
Theorem 4.2.4 (Basis criterion, Parseval方程)
\begin_inset CommandInset label
LatexCommand label
name "par:Theorem-4.2.4-(Basis"

\end_inset


\end_layout

\begin_layout Standard
设
\begin_inset Formula $\left(e_{n}\right)$
\end_inset

为内积空间
\begin_inset Formula $E$
\end_inset

中的正交系.
 则以下命题相互等价:
\end_layout

\begin_layout Standard
1.
 
\begin_inset Formula 
\[
\overline{\mathrm{span}\left\{ e_{1},e_{2},\cdots\right\} }=E,
\]

\end_inset

即
\begin_inset Formula $\left(e_{n}\right)$
\end_inset

是一组基;
\end_layout

\begin_layout Standard
2.
 (Parseval方程)
\begin_inset Formula 
\[
\sum_{n=1}^{\infty}\left|a_{n}\right|^{2}=\norm{f}^{2}
\]

\end_inset

对于任何
\begin_inset Formula $f\in E$
\end_inset

, 
\begin_inset Formula $a_{n}=\left\langle f,e_{n}\right\rangle $
\end_inset

成立;
\end_layout

\begin_layout Standard
3.
 (广义的Parseval方程)
\begin_inset Formula 
\[
\left\langle f,g\right\rangle =\sum a_{n}\overline{b_{n}}
\]

\end_inset

对于任何
\begin_inset Formula $f,g\in E$
\end_inset

, 
\begin_inset Formula $a_{n}=\left\langle f,e_{n}\right\rangle $
\end_inset

, 
\begin_inset Formula $b_{n}=\left\langle g,e_{n}\right\rangle $
\end_inset

成立;
\end_layout

\begin_layout Standard
4.
 对于任意的
\begin_inset Formula $f\in E$
\end_inset

, 和
\begin_inset Formula $\sum a_{n}e_{n}$
\end_inset

在
\begin_inset Formula $E$
\end_inset

中收敛于
\begin_inset Formula $f$
\end_inset

, 其中
\begin_inset Formula $a_{n}=\left\langle f,e_{n}\right\rangle $
\end_inset

.
\end_layout

\begin_layout Standard
证明路线可以按照
\begin_inset Formula $(1)\Longrightarrow(2)\Longleftrightarrow(3)$
\end_inset

, 
\begin_inset Formula $(2)\Longrightarrow(4)\Longrightarrow(1)$
\end_inset

进行.
\end_layout

\begin_layout Paragraph
注: 
\end_layout

\begin_layout Standard
定理对
\begin_inset Formula $E$
\end_inset

的完备性需做讨论, 结论(1)已经包含了
\begin_inset Formula $E$
\end_inset

的完备性.
 另外3条结论需要补充
\begin_inset Formula $E$
\end_inset

是完备的证明.
 或者不考虑
\begin_inset Formula $E$
\end_inset

的完备性, 将(1)中的结论改为
\begin_inset Formula 
\[
\overline{\mathrm{span}\left\{ e_{1},e_{2},\cdots\right\} }\supseteq E,
\]

\end_inset

参考
\begin_inset CommandInset ref
LatexCommand ref
reference "par:Theorem-4.4.2"
plural "false"
caps "false"
noprefix "false"

\end_inset

的证明.
\end_layout

\begin_layout Subsection
Orthonormal bases and the Gram-Schmidt process
\end_layout

\begin_layout Paragraph
Lemma 4.3.1
\end_layout

\begin_layout Standard
若
\begin_inset Formula $E$
\end_inset

是内积空间, 
\begin_inset Formula $(e_{n})$
\end_inset

为正交基, 则
\begin_inset Formula $E$
\end_inset

完备的充分必要条件是, 只要
\begin_inset Formula $\sum\left|a_{n}\right|^{2}<\infty$
\end_inset

, 就有
\begin_inset Formula $\sum a_{n}e_{n}$
\end_inset

在
\begin_inset Formula $E$
\end_inset

中收敛.
\end_layout

\begin_layout Paragraph
注: 
\end_layout

\begin_layout Standard
正交系只表示元素之间的正交关系, 其线性组合不必表出全空间;
\end_layout

\begin_layout Standard
正交基不仅要有正交关系, 还要线性表出全空间.
\end_layout

\begin_layout Paragraph
Theorem 4.3.2
\end_layout

\begin_layout Standard
设
\begin_inset Formula $E$
\end_inset

为无穷维可分Hilbert空间.
 则
\begin_inset Formula $E$
\end_inset

等距同构于
\begin_inset Formula $\ell^{2}$
\end_inset

.
\end_layout

\begin_layout Subsection
The dual of a Hilbert space: the Riesz representation theorem
\end_layout

\begin_layout Paragraph
Theorem 4.4.1
\end_layout

\begin_layout Standard
设
\begin_inset Formula $f:H\to\CC$
\end_inset

是Hilbert空间
\begin_inset Formula $H$
\end_inset

上的连续线性泛函.
 则存在唯一的元素
\begin_inset Formula $\eta\in H$
\end_inset

使得
\begin_inset Formula 
\[
f(\xi)=\left\langle \xi,\eta\right\rangle .
\]

\end_inset

从而
\begin_inset Formula $H$
\end_inset

的对偶空间, 通过取共轭线性映射
\begin_inset Formula $f\mapsto\eta$
\end_inset

, 与
\begin_inset Formula $H$
\end_inset

恒同.
\end_layout

\begin_layout Paragraph
Theorem 4.4.2
\begin_inset CommandInset label
LatexCommand label
name "par:Theorem-4.4.2"

\end_inset


\end_layout

\begin_layout Standard
设
\begin_inset Formula $D$
\end_inset

是单位圆盘, 
\begin_inset Formula 
\[
L_{hol}^{2}(D)\coloneqq\left\{ f:D\to\CC\mid f\text{ holomorphic, }\int_{\left|z\right|<1}\left|f(z)\right|^{2}\ud x\ud y<\infty\right\} 
\]

\end_inset

上定义内积
\begin_inset Formula 
\[
\left\langle f,g\right\rangle =\int_{\left|z\right|<1}f(z)\overline{g(z)}\ud x\ud y.
\]

\end_inset

证明
\begin_inset Formula $L_{hol}^{2}(D)$
\end_inset

是Hilbert空间.
\end_layout

\begin_layout Paragraph
证明概要
\end_layout

\begin_layout Standard
设
\begin_inset Formula 
\[
\left\langle f,g\right\rangle _{r}=\int_{\left|z\right|<r}f(z)\overline{g(z)}\ud x\ud y,\quad\norm{f}_{r}=\left\langle f,f\right\rangle _{r}.
\]

\end_inset


\end_layout

\begin_layout Standard
1.
 证明
\begin_inset Formula $\left(e_{n}\right)=\left(\sqrt{\frac{n+1}{\pi}}z^{n}\right)_{n=0}^{\infty}$
\end_inset

是正交系, 
\begin_inset Formula 
\[
\left\langle z^{n},z^{m}\right\rangle _{r}=\frac{\pi r^{2(n+1)}}{n+1}\delta_{mn}.
\]

\end_inset


\end_layout

\begin_layout Standard
2.
 证明
\begin_inset Formula $\left(e_{n}\right)$
\end_inset

是
\begin_inset Formula $L_{hol}^{2}(D)$
\end_inset

的正交基.
\end_layout

\begin_layout Standard
只需证明, 对于任何
\begin_inset Formula $f\in L_{hol}^{2}(D)$
\end_inset

, 有
\begin_inset Formula 
\[
\norm{f}^{2}=\sum_{n}\left|\left\langle f,e_{n}\right\rangle \right|^{2}.
\]

\end_inset


\end_layout

\begin_layout Standard
利用
\begin_inset Formula $f$
\end_inset

是全纯的, 有Laurent展开表示
\begin_inset Formula 
\[
f=\sum a_{n}z^{n},
\]

\end_inset

收敛半径至少是
\begin_inset Formula $1$
\end_inset

.
 则对于任何
\begin_inset Formula $\left|z\right|\le r<1$
\end_inset

, 
\begin_inset Formula $\sum^{N}a_{n}z^{n}\rightrightarrows f(z)$
\end_inset

.
 由
\begin_inset Formula 
\[
\norm{g}_{r}^{2}\le\norm{g}_{\infty}^{2}\left(\pi r^{2}\right).
\]

\end_inset

故
\begin_inset Formula 
\[
\norm{\sum_{n=0}^{N}a_{n}z^{n}-f(z)}_{r}^{2}\le\left(\pi r^{2}\right)\norm{\sum_{n=0}^{N}a_{n}z^{n}-f(z)}_{\infty}^{2}\to0,\quad N\to\infty.
\]

\end_inset

所以
\begin_inset Formula 
\[
\norm{\sum_{n=0}^{N}a_{n}z^{n}}_{r}\to\norm{f(z)}_{r},\qquad N\to\infty.
\]

\end_inset


\end_layout

\begin_layout Standard
再取
\begin_inset Formula $r\to1^{-}$
\end_inset

, 有
\begin_inset Formula $\norm{f(z)}_{r}\to\norm{f(z)}$
\end_inset

.
\begin_inset Formula 
\[
\norm{\sum_{n=0}^{\infty}a_{n}z^{n}}_{r}^{2}=\sum_{n=0}^{\infty}\left|a_{n}\right|^{2}\cdot\frac{\pi}{n+1}\cdot r^{2(n+1)}\to\sum_{n=0}^{\infty}\left|\left\langle f,e_{n}\right\rangle \right|^{2},\quad r\to1^{-}.
\]

\end_inset

这里用到了
\begin_inset Formula 
\[
\left\langle f,e_{n}\right\rangle =\left\langle a_{n}z^{n},e_{n}\right\rangle =a_{n}\sqrt{\frac{n+1}{\pi}}\left\langle z^{n},z^{n}\right\rangle =a_{n}\sqrt{\frac{\pi}{n+1}}.
\]

\end_inset


\end_layout

\begin_layout Standard
3.
 证明
\begin_inset Formula $L_{hol}^{2}(D)$
\end_inset

是完备的.
\end_layout

\begin_layout Standard
\begin_inset Formula $L_{hol}^{2}(D)$
\end_inset

中的元素均能表示成
\begin_inset Formula $\sum\left\langle f,e_{n}\right\rangle e_{n}$
\end_inset

的形式, 并不蕴含完备性, 
\begin_inset Formula $\ell^{2}$
\end_inset

是完备的, 任取
\begin_inset Formula $\left(b_{n}\right)\in\ell^{2}$
\end_inset

, 构造
\begin_inset Formula $\sum b_{n}e_{n}$
\end_inset

给出
\begin_inset Formula $L_{hol}^{2}(D)$
\end_inset

中的一个元素.
\end_layout

\begin_layout Standard
有基
\begin_inset Formula $\left(e_{n}\right)$
\end_inset

的内积空间
\begin_inset Formula $E$
\end_inset

, 
\begin_inset Formula $E$
\end_inset

完备的充分必要条件是, 对于任何
\begin_inset Formula $\left(a_{n}\right)\in\ell^{2}$
\end_inset

, 总有
\begin_inset Formula $\sum a_{n}e_{n}\in E$
\end_inset

.
\end_layout

\begin_layout Standard
注意参考定理
\begin_inset CommandInset ref
LatexCommand ref
reference "par:Theorem-4.2.4-(Basis"
plural "false"
caps "false"
noprefix "false"

\end_inset

.
\end_layout

\begin_layout Section
Fourier series and the Dirichlet problem
\end_layout

\begin_layout Paragraph
Proposition 5.0.3
\begin_inset CommandInset label
LatexCommand label
name "par:Proposition-5.0.3"

\end_inset


\end_layout

\begin_layout Standard
设
\begin_inset Formula $K_{n}(x,y)$
\end_inset

是满足以下条件的
\begin_inset Formula $[a,b]\times[a,b]$
\end_inset

上的核:
\end_layout

\begin_layout Standard
(a) 
\begin_inset Formula $K_{n}\ge0$
\end_inset

, 且
\begin_inset Formula $K_{n}(x,y)\in C[a,b]^{2}$
\end_inset

;
\end_layout

\begin_layout Standard
(b) 
\begin_inset Formula $\int K_{n}(x,y)\ud y\rightrightarrows1$
\end_inset

, 
\begin_inset Formula $n\to\infty$
\end_inset

, 
\begin_inset Formula $\forall x\in[a,b]$
\end_inset

;
\end_layout

\begin_layout Standard
(c) 对于任何事先给定的
\begin_inset Formula $\delta>0$
\end_inset

, 有
\begin_inset Formula $\int_{\left|y-x\right|\ge\delta}K_{n}(x,y)\ud y\rightrightarrows0$
\end_inset

, 
\begin_inset Formula $n\to\infty$
\end_inset

, 
\begin_inset Formula $\forall x\in[a,b]$
\end_inset

.
\end_layout

\begin_layout Standard
若
\begin_inset Formula $f\in C[a,b]$
\end_inset

, 定义
\begin_inset Formula 
\[
f_{n}(x)=\int K_{n}(x,y)f(y)\ud y.
\]

\end_inset

则在
\begin_inset Formula $[a,b]$
\end_inset

上, 
\begin_inset Formula $f_{n}\rightrightarrows f$
\end_inset

, 
\begin_inset Formula $n\to\infty$
\end_inset

.
\end_layout

\begin_layout Paragraph
证明主要依赖于下式
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{aligned}\left|f(x)-f_{n}(x)\right| & \leq\int_{|y-x|\leq\delta}|f(x)-f(y)|K_{n}(x,y)dy\\
 & \quad+\int_{|y-x|\geq\delta}|f(x)-f(y)|K_{n}(x,y)dy+|f(x)|\left|1-\int K_{n}(x,y)dy\right|\\
 & \leq\epsilon\int K_{n}(x,y)dy+2\|f\|_{\infty}\int_{|y-x|\geq\delta}K_{n}(x,y)dy+\|f\|_{\infty}\left|1-\int K_{n}(x,y)dy\right|.
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Paragraph
Proposition 5.0.4
\end_layout

\begin_layout Standard
设Poisson积分
\begin_inset Formula 
\[
f_{r}(x)=\frac{1}{2\pi}\int_{0}^{2\pi}K_{r}(x,y)f(y)\ud y,
\]

\end_inset

其中
\begin_inset Formula 
\[
K_{r}(x,y)=\frac{1-r^{2}}{1-2r\cos(x-y)+r^{2}}
\]

\end_inset

为Poisson核.
 取
\begin_inset Formula $r_{n}\nearrow1$
\end_inset

, 
\begin_inset Formula $K_{n}(x,y)=K_{r_{n}}(x,y)$
\end_inset

.
 则
\end_layout

\begin_layout Standard
1.
 
\begin_inset Formula $\frac{K_{n}}{2\pi}$
\end_inset

满足命题
\begin_inset CommandInset ref
LatexCommand ref
reference "par:Proposition-5.0.3"
plural "false"
caps "false"
noprefix "false"

\end_inset

的所有条件;
\end_layout

\begin_layout Standard
2.
 
\begin_inset Formula 
\[
\frac{1}{2\pi}\int_{0}^{2\pi}K_{r}(x,y)f(y)\ud y=\sum_{n\in\ZZ}r^{|n|}a_{n}\ue^{\ui nx},\quad a_{n}=\left\langle f,e_{n}\right\rangle ,\ e_{n}=\ue^{\ui nx};
\]

\end_inset


\end_layout

\begin_layout Standard
3.
 
\begin_inset Formula $\norm{f_{r}-f}_{L^{\infty}}\to0$
\end_inset

, 
\begin_inset Formula $r\nearrow1$
\end_inset

.
\end_layout

\begin_layout Paragraph
Corollary 5.0.5
\end_layout

\begin_layout Standard
\begin_inset Formula $C(\TT)$
\end_inset

上的任何函数均可由三角多项式一致逼近.
\end_layout

\begin_layout Paragraph
Corollary 5.0.6 (Weierstrass逼近定理)
\end_layout

\begin_layout Standard
\begin_inset Formula $C[0,1]$
\end_inset

上的任何函数可以用多项式一致逼近.
\end_layout

\begin_layout Standard
定理证明中注意
\begin_inset Formula $\widetilde{f}$
\end_inset

可能不连续.
\end_layout

\begin_layout Standard
注: Taylor定理并不能用来证明此定理.
\end_layout

\begin_layout Paragraph
Corollary 5.0.7
\end_layout

\begin_layout Standard
设
\begin_inset Formula $C(\TT)$
\end_inset

上赋予内积
\begin_inset Formula 
\[
\left\langle f,g\right\rangle =\frac{1}{2\pi}\int_{0}^{2\pi}f(x)\overline{g(x)}\ud x,
\]

\end_inset

则
\begin_inset Formula $\left(e_{n}=\ue^{\ui nx}\right)$
\end_inset

是
\begin_inset Formula $C(\TT)$
\end_inset

上的正交基.
\end_layout

\begin_layout Paragraph
Corollary 5.0.8
\end_layout

\begin_layout Standard
设
\begin_inset Formula $E$
\end_inset

为
\begin_inset Formula $[0,2\pi]$
\end_inset

上分段连续函数空间.
 则
\begin_inset Formula $\left(e_{n}=\ue^{\ui nx}\right)$
\end_inset

是
\begin_inset Formula $E$
\end_inset

上的正交基, 且
\begin_inset Formula 
\[
\norm{f}_{2}^{2}=\sum\left|a_{n}\right|^{2}.
\]

\end_inset


\end_layout

\begin_layout Standard
这个证明初看起来似乎没有在证明定理, 事实上, 当三角多项式一致逼近
\begin_inset Formula $f$
\end_inset

时, 自然有定理的结论, 注意小节
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:Closest-points-and"
plural "false"
caps "false"
noprefix "false"

\end_inset

和定理
\begin_inset CommandInset ref
LatexCommand ref
reference "par:Theorem-4.2.4-(Basis"
plural "false"
caps "false"
noprefix "false"

\end_inset

.
\end_layout

\begin_layout Standard
这个推论可以用来计算
\begin_inset Formula $\zeta(2n)$
\end_inset

.
\end_layout

\begin_layout Subsection
The Dirichlet Problem
\end_layout

\begin_layout Standard
设
\begin_inset Formula $f\in C(\partial D;\RR)$
\end_inset

, 
\begin_inset Formula $D$
\end_inset

为闭单位圆盘, 则
\begin_inset Formula 
\[
\begin{cases}
\Delta F=0, & z\in D^{\circ},\\
F(z)=f(z), & z\in\partial D.
\end{cases}
\]

\end_inset

有解
\begin_inset Formula 
\[
F(z)=F(r\ue^{\ui x})=\frac{1}{2\pi}\int_{0}^{2\pi}K_{r}(x,y)f(y)\ud y.
\]

\end_inset


\end_layout

\begin_layout Paragraph
Theorem 5.1.1 (极大原理)
\end_layout

\begin_layout Standard
设
\begin_inset Formula $f:\overline{D}\to\RR$
\end_inset

为
\begin_inset Formula $D$
\end_inset

上的调和函数, 则
\begin_inset Formula 
\[
\max_{\overline{D}}f=\max_{\partial D}f.
\]

\end_inset


\end_layout

\begin_layout Standard
证明使用反证法, 并取充分小的
\begin_inset Formula $\epsilon>0$
\end_inset

, 使辅助函数
\begin_inset Formula $g(x)\coloneqq f(x)+\epsilon\norm{x-a}^{2}$
\end_inset

仍符合反证法的不等式.
\end_layout

\begin_layout Subsection
Uniformly convergent Fourier series
\end_layout

\begin_layout Standard
存在连续函数, 它的Fourier级数在一个稠子集上不收敛.
\end_layout

\begin_layout Standard
Carleson, 1966, 证明了, 存在连续的
\begin_inset Formula $f$
\end_inset

, 其Fourier级数无处收敛.
\end_layout

\begin_layout Standard
Kolmogorov证明了, 存在
\begin_inset Formula $f\in L^{1}[0,2\pi]$
\end_inset

, 其Fourier级数几乎处处收敛.
\end_layout

\begin_layout Paragraph
Theorem 5.2.1
\end_layout

\begin_layout Standard
设
\begin_inset Formula $f\in C^{1}(\TT)$
\end_inset

, 则
\begin_inset Formula 
\[
\sum_{n\in\ZZ}\widehat{f}(n)\ue^{\ui nx}\rightrightarrows f(x).
\]

\end_inset


\end_layout

\begin_layout Paragraph
证明
\end_layout

\begin_layout Standard
使用Sobolev理论, 
\begin_inset Formula $\widehat{f'}(n)=\ui n\cdot\widehat{f}(n)$
\end_inset

.
 所以
\begin_inset Formula 
\begin{align*}
f\in C^{1}(\TT) & \Longrightarrow f'\in C(\TT)\\
 & \Longrightarrow\norm{f'}_{L^{2}}^{2}=\sum\left|\widehat{f'}(n)\right|^{2}=\sum n^{2}\left|\widehat{f}(n)\right|^{2}\eqqcolon\sum n^{2}\left|a_{n}\right|^{2}<\infty.\\
 & \Longrightarrow\sum_{n\ne0}\left|a_{n}\right|\le\left(\sum_{n\ne0}n^{2}\left|a_{n}\right|^{2}\right)^{1/2}\left(\sum_{n\ne0}\frac{1}{n^{2}}\right)^{1/2}<\infty,\\
 & \Longrightarrow\sum\widehat{f}(n)\ue^{\ui nx}\rightrightarrows f(x).
\end{align*}

\end_inset


\end_layout

\begin_layout Paragraph
Theorem 5.2.2 (Poisson求和公式)
\end_layout

\begin_layout Standard
设
\begin_inset Formula $f\in C^{1}(\RR)$
\end_inset

, 
\begin_inset Formula $(1+x^{2})f,\ (1+x^{2})f'\in\mathrm{UB}(\RR)$
\end_inset

.
 则
\begin_inset Formula 
\[
\sum_{n\in\ZZ}f(2n\pi)=\sum_{n\in\ZZ}\frac{1}{2\pi}\int_{\RR}f(x)\ue^{-\ui nx}\ud x.
\]

\end_inset


\end_layout

\begin_layout Paragraph
证明
\end_layout

\begin_layout Standard
记
\begin_inset Formula 
\[
F(x)=\sum f(x+2\pi n),\quad G(x)=\sum f'(x+2\pi n).
\]

\end_inset

则
\begin_inset Formula $F'(x)=G(x)$
\end_inset

.
 
\begin_inset Formula $F(x)\in C^{1}(\TT)$
\end_inset

, 所以
\begin_inset Formula 
\[
\sum\widehat{F}(n)\ue^{\ui nx}\rightrightarrows F(x),
\]

\end_inset

故
\begin_inset Formula 
\[
F(0)=\sum\widehat{F}(n).
\]

\end_inset


\end_layout

\begin_layout Section
Application to theta, gamma and zeta functions
\end_layout

\begin_layout Subsection
Theta functions
\end_layout

\begin_layout Standard
对于任意的
\begin_inset Formula $a>0$
\end_inset

, 有
\begin_inset Formula 
\[
\int_{\RR}\ue^{-a^{2}x^{2}/2}\ue^{-\ui xt}\ud x=\frac{\sqrt{2\pi}}{a}\ue^{-t^{2}/2a^{2}}.
\]

\end_inset

由Poisson求和公式
\begin_inset Formula 
\[
\sum_{n\in\ZZ}\frac{1}{\sqrt{2\pi}a}\ue^{-n^{2}/2a^{2}}=\sum_{n\in\ZZ}\ue^{-2\pi^{2}a^{2}n^{2}}.
\]

\end_inset

记
\begin_inset Formula $b=\sqrt{2\pi}a$
\end_inset

, 则有
\begin_inset Formula 
\[
\sum_{n\in\ZZ}\ue^{-\pi b^{2}n^{2}}=\frac{1}{b}\sum_{n\in\ZZ}\ue^{-\pi n^{2}/b^{2}}.
\]

\end_inset

定义
\begin_inset Formula 
\[
\theta(t)=\sum_{n\in\ZZ}\ue^{-\pi tn^{2}},\qquad t>0.
\]

\end_inset

则有Jacobi's functional eqn.
\begin_inset Formula 
\[
\theta(t)=\frac{1}{\sqrt{t}}\theta\left(\frac{1}{t}\right).
\]

\end_inset


\end_layout

\begin_layout Standard
注: 在弦理论中这个方程是
\begin_inset Formula $T$
\end_inset

-duality的起点.
\end_layout

\begin_layout Standard
设
\begin_inset Formula $\tau\in\CC$
\end_inset

, 定义
\begin_inset Formula 
\[
\Theta\left(\tau\right)=\sum\ue^{\ui\pi\tau n^{2}},
\]

\end_inset

其中
\begin_inset Formula $\mathrm{Im}\tau>0$
\end_inset

, 则
\begin_inset Formula 
\[
\Theta(\tau)=\frac{1}{\sqrt{-\ui\tau}}\Theta\left(-\frac{1}{\tau}\right).
\]

\end_inset

并有
\begin_inset Formula 
\[
\Theta(\tau+2)=\Theta(\tau).
\]

\end_inset


\end_layout

\begin_layout Standard
Jacobi三乘积公式 (Jacobi triple product)
\begin_inset Note Note
status open

\begin_layout Plain Layout
TODO: 补充证明
\end_layout

\end_inset


\begin_inset Formula 
\[
\sum_{n\in\ZZ}q^{n^{2}}=\prod_{n=1}^{\infty}\left(1-q^{2n}\right)\left(1+q^{2n-1}\right)\left(1+q^{2n-1}\right).
\]

\end_inset

更一般的, 有
\begin_inset Formula 
\[
\sum_{n\in\mathbb{Z}}q^{n^{2}}2^{n}=\prod_{n=1}^{\infty}\left(1-q^{2n}\right)\left(1+q^{2n-1}\right)\left(1+\frac{1}{2}q^{2n-1}\right).
\]

\end_inset


\begin_inset Formula 
\[
\left(\sum_{n\in\mathbb{Z}}q^{n^{2}}2^{n}\right)^{2}=1+4\sum_{n\geq0}(-1)^{n}\frac{q^{2n-1}}{1-q^{2n-1}},
\]

\end_inset


\begin_inset Formula 
\[
\left(\sum_{n\in\mathbb{Z}}q^{n^{2}}2^{n}\right)^{4}=1+4\sum_{n\geq1,4\nmid n}\frac{8q^{n}}{1-q^{n}}.
\]

\end_inset


\end_layout

\begin_layout Subsection
The gamma and beta functions
\end_layout

\begin_layout Standard
若
\begin_inset Formula $\mathrm{Re}z>0$
\end_inset

, 则定义
\begin_inset Formula 
\[
\Gamma(z)=\int_{0}^{\infty}t^{z-1}\ue^{-t}\ud t.
\]

\end_inset

根据Morera定理
\begin_inset Note Note
status open

\begin_layout Plain Layout
TODO: check
\end_layout

\end_inset

.
 
\begin_inset Formula $\Gamma$
\end_inset

在
\begin_inset Formula $\mathrm{Re}z>0$
\end_inset

内是全纯函数.
\end_layout

\begin_layout Standard
对于
\begin_inset Formula $\mathrm{Re}a,\mathrm{Re}b>0$
\end_inset

, 定义Beta函数为
\begin_inset Formula 
\[
\begin{aligned}B(a,b) & =\int_{0}^{1}t^{a-1}(1-t)^{b-1}dt\\
 & =2\int_{0}^{\pi/2}(\cos\theta)^{2a-1}(\sin\theta)^{2b-1}d\theta\\
 & =\int_{0}^{\infty}\frac{s^{b-1}}{(1+s)^{a+b}}ds.
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Paragraph
证明
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{\Gamma(a)\Gamma(b)}{\Gamma(a+b)}=B(a,b).
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Gamma(a)\Gamma(b)=\int_{0}^{\infty}s^{a-1}e^{-s}ds\int_{0}^{\infty}t^{b-1}e^{-t}dt,
\]

\end_inset

令
\begin_inset Formula $x^{2}=s$
\end_inset

, 
\begin_inset Formula $y^{2}=t$
\end_inset

, 用极坐标即可.
\begin_inset Formula 
\[
\begin{aligned}\Gamma(a)\Gamma(b) & =4\int_{-\infty}^{\infty}\int_{-\infty}^{\infty}e^{-\left(x^{2}+y^{2}\right)}x^{2a-1}y^{2b-1}dxdy\\
 & =4\int_{0}^{\infty}\int_{0}^{\pi/2}e^{-r^{2}}(r\cos\theta)^{2a-1}(r\sin\theta)^{2b-1}d\theta dr\\
 & =4\int_{0}^{\infty}e^{-r^{2}}r^{2a+b}dr\int_{0}^{\pi/2}(\cos\theta)^{2a-1}(\sin\theta)^{2b-1}d\theta\\
 & =\Gamma(a+b)B(a,b).
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Standard
对偶性质
\begin_inset Formula 
\[
\Gamma(z)\Gamma(1-z)=\frac{\pi}{\sin\pi z},\qquad z\in(0,1).
\]

\end_inset


\end_layout

\begin_layout Subsection
The Riemann zeta function
\end_layout

\begin_layout Standard
若
\begin_inset Formula $\mathrm{Re}s>1$
\end_inset

, 则可定义
\begin_inset Formula 
\[
\zeta(s)=\sum_{n\in\NN}n^{-s}.
\]

\end_inset


\end_layout

\begin_layout Standard
设
\begin_inset Formula 
\[
\xi(s)=\frac{\Gamma(s/2)\zeta(s)}{\pi^{s/2}}.
\]

\end_inset

则有
\begin_inset Formula 
\[
\xi(s)=\xi(1-s).
\]

\end_inset

设
\begin_inset Formula 
\[
\psi(x)=\sum_{n=1}^{\infty}e^{-n^{2}x}=\frac{\theta(x)-1}{2}.
\]

\end_inset

则由
\begin_inset Formula $\theta(x)=\frac{1}{\sqrt{x}}\theta\left(\frac{1}{x}\right)$
\end_inset

, 有
\begin_inset Formula 
\[
2\psi(x)+1=\frac{1}{\sqrt{x}}\left(2\psi\left(\frac{1}{x}\right)+1\right).
\]

\end_inset

当
\begin_inset Formula $\mathrm{Re}s>0$
\end_inset

时, 由
\begin_inset Formula 
\[
\frac{\Gamma(s/2)n^{-s}}{\pi^{s/2}}=\int_{0}^{\infty}x^{\frac{s}{2}-1}e^{-n^{2}\pi^{2}x}dx,
\]

\end_inset

求和得到.
\begin_inset Formula 
\[
\begin{aligned}\frac{\Gamma(s/2)\zeta(s)}{\pi^{s/2}} & =\int_{0}^{\infty}x^{s/2-1}\psi(x)dx\\
 & =\int_{0}^{1}x^{s/2-1}\psi(x)dx+\int_{1}^{\infty}x^{s/2-1}\psi(x)dx\\
 & =\int_{0}^{1}x^{s/2-1}\left(\frac{1}{\sqrt{x}}\psi\left(\frac{1}{x}\right)+\frac{1}{2\sqrt{x}}-\frac{1}{2}\right)dx+\int_{1}^{\infty}x^{s/2-1}\psi(x)dx\\
 & =\frac{1}{s-1}-\frac{1}{s}+\int_{0}^{1}x^{\frac{s}{2}-\frac{3}{2}}\psi\left(\frac{1}{x}\right)dx+\int_{1}^{\infty}x^{s/2-1}\psi(x)dx\\
 & =\frac{-1}{s(1-s)}+\int_{1}^{\infty}x^{\frac{1}{2}(1-s)-1}x^{s/2-1}\psi(x)dx.
\end{aligned}
\]

\end_inset

所以
\begin_inset Formula $\xi(s)=$
\end_inset


\end_layout

