\begin_layout Standard
\begin_inset Formula $\RR^{n}$
\end_inset

: 欧式空间, 
\begin_inset Formula $x=(x_{1},\cdots,x_{n})\in\RR^{n}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\norm{x}=\sqrt{x_{1}^{2}+\cdots+x_{n}^{2}}.
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $p=(p_{1},\cdots,p_{n})\in\NN^{n}$
\end_inset

: 多重指标, 
\begin_inset Formula $\left|p\right|=p_{1}+\cdots+p_{n}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
D^{p}=\frac{\partial^{\left|p\right|}}{\partial x_{1}^{p_{1}}\cdots\partial x_{n}^{p_{n}}}
\]

\end_inset

为偏微分算子.
\end_layout

\begin_layout Standard
\begin_inset Formula $\Omega\subseteq\RR^{n}$
\end_inset

: 非空开集.
 
\begin_inset Formula $\overline{\Omega}$
\end_inset

: 
\begin_inset Formula $\Omega$
\end_inset

的闭包.
 
\end_layout

\begin_layout Standard
\begin_inset Formula $C(\overline{\Omega})$
\end_inset

: 
\begin_inset Formula $\overline{\Omega}$
\end_inset

上定义的连续函数全体, 线性空间.
\end_layout

\begin_layout Standard
\begin_inset Formula $C^{k}(\overline{\Omega})$
\end_inset

, 
\begin_inset Formula $k\in\NN$
\end_inset

: 
\begin_inset Formula $\Omega$
\end_inset

内有
\begin_inset Formula $k$
\end_inset

次连续可微的偏导数, 在
\begin_inset Formula $\overline{\Omega}$
\end_inset

上连续的函数组成的线性空间.
\end_layout

\begin_layout Standard
\begin_inset Formula $C^{0}(\overline{\Omega})=C(\overline{\Omega})$
\end_inset

.
\end_layout

\begin_layout Standard
设
\begin_inset Formula $\phi\in C(\overline{\Omega})$
\end_inset

, 
\begin_inset Formula $\phi$
\end_inset

的支集:
\begin_inset Formula 
\[
\mathrm{supp}=\overline{\left\{ x\in\Omega:\phi(x)\ne0\right\} }.
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $C_{0}^{k}(\Omega)$
\end_inset

: 
\begin_inset Formula $C^{k}(\overline{\Omega})$
\end_inset

中支集是
\begin_inset Formula $\Omega$
\end_inset

内紧集(有界闭集)的所有函数组成的空间.
\end_layout

\begin_layout Standard
\begin_inset Formula $C_{0}^{\infty}(\Omega)=\cap_{k=0}^{\infty}C_{0}^{k}(\Omega)$
\end_inset

: 支集是
\begin_inset Formula $\Omega$
\end_inset

内紧集的无穷次可微函数全体.
\end_layout

\begin_layout Standard
设
\begin_inset Formula $\RR^{n}$
\end_inset

上定义的函数
\begin_inset Formula 
\[
j(x)=\begin{cases}
c_{n}e^{-\frac{1}{1-\norm{x}^{2}}}, & \norm{x}<1;\\
0, & \norm{x}\ge1.
\end{cases}
\]

\end_inset

其中
\begin_inset Formula 
\[
c_{n}=\left(\int_{\norm{x}\le1}e^{-\frac{1}{1-\norm{x}^{2}}}dx\right)^{-1}.
\]

\end_inset

则
\begin_inset Formula $j(x)\in C_{0}^{\infty}\left(\RR^{n}\right)$
\end_inset

.
 
\begin_inset Formula $\forall\delta>0$
\end_inset

, 记
\begin_inset Formula $j_{\delta}(x)=\frac{1}{\delta^{n}}j\left(\frac{x}{\delta}\right)$
\end_inset

.
\end_layout

\begin_layout Paragraph
定理1
\end_layout

\begin_layout Standard
设
\begin_inset Formula $u(x)\in L^{1}(\Omega)$
\end_inset

, 且
\begin_inset Formula $\mathrm{supp}u\subseteq K\Subset\Omega$
\end_inset

, 且当
\begin_inset Formula $\delta>0$
\end_inset

充分小时
\begin_inset Formula 
\[
u_{\delta}(x)=\int_{\Omega}u(y)j_{\delta}(x-y)dy=(u*j_{\delta})(x)\in C_{0}^{\infty}(\RR^{n}).
\]

\end_inset


\end_layout

