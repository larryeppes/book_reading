\begin_layout Standard
\begin_inset Formula 
\begin{align*}
I & =\int\frac{\cos x+\sin x}{e^{x}+3\cos x}\ud x\\
 & =\int\frac{\cos x+\sin x}{e^{x}\left(1+3e^{-x}\cos x\right)}\ud x\\
 & \xlongequal{u=1+3e^{-x}\cos x}\int\frac{\cos x+\sin x}{e^{x}u}\cdot\left(\frac{e^{x}}{-3\left(\cos x+\sin x\right)}\right)\ud u\\
 & =-\frac{1}{3}\int\frac{1}{u}\ud u\\
 & =-\frac{1}{3}\ln\left(1+3e^{-x}\cos x\right)+C\\
 & =\frac{1}{3}\left(x-\ln\left(e^{x}+3\cos x\right)\right)+C
\end{align*}

\end_inset


\end_layout

