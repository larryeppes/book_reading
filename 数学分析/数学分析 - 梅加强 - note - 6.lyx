\begin_layout Subsection
广义积分
\end_layout

\begin_layout Paragraph
定义 7.2.1 (无穷积分).
 
\end_layout

\begin_layout Standard
设 
\begin_inset Formula $a\in\mathbb{R}$
\end_inset

, 定义在 
\begin_inset Formula $[a,+\infty)$
\end_inset

 中的函数 
\begin_inset Formula $f$
\end_inset

 如果在任何有限区间 
\begin_inset Formula $[a,A]$
\end_inset

 上都是 Riemann 可积的, 且极限 
\begin_inset Formula 
\[
\lim_{A\rightarrow+\infty}\int_{a}^{A}f(x)dx
\]

\end_inset

存在 (且有限), 则称无穷积分 
\begin_inset Formula $\int_{a}^{+\infty}f(x)dx$
\end_inset

 存在或收敛, 记为 
\begin_inset Formula 
\[
\int_{a}^{+\infty}f(x)dx=\lim_{A\rightarrow+\infty}\int_{a}^{A}f(x)dx,
\]

\end_inset

并说
\begin_inset Formula $f\in\mathcal{R}[a,+\infty)$
\end_inset

.
 否则就称无穷积分 
\begin_inset Formula $\int_{a}^{+\infty}f(x)dx$
\end_inset

 不存在或发散.
\end_layout

\begin_layout Standard
类似的，我们可以定义无穷积分
\begin_inset Formula $\int_{-\infty}^{a}f(x)\ud x$
\end_inset

和
\begin_inset Formula $\int_{-\infty}^{\infty}f(x)\ud x$
\end_inset

.
 如果极限
\begin_inset Formula 
\[
\lim_{A\to+\infty}\int_{-A}^{A}f(x)\ud x
\]

\end_inset

存在, 它和上面定义的无穷积分是不等价的, 称为Cauchy主值积分, 记为
\begin_inset Formula 
\[
(V.P.)\int_{-\infty}^{\infty}f(x)\ud x\coloneqq\lim_{A\to+\infty}\int_{-A}^{A}f(x)\ud x.
\]

\end_inset


\end_layout

\begin_layout Paragraph
无穷积分的Cauchy准则
\end_layout

\begin_layout Standard
\begin_inset Formula $f(x)$
\end_inset

在
\begin_inset Formula $[a,+\infty)$
\end_inset

上的积分收敛, 当且仅当, 对于任意的
\begin_inset Formula $\epsilon>0$
\end_inset

, 存在
\begin_inset Formula $M=M(\epsilon)$
\end_inset

, 使得对于任何
\begin_inset Formula $B>A>M$
\end_inset

时, 有
\begin_inset Formula 
\[
\left|\int_{A}^{B}f(x)\ud x\right|<\epsilon.
\]

\end_inset


\end_layout

\begin_layout Paragraph
例7.2.1
\end_layout

\begin_layout Standard
无穷积分
\begin_inset Formula $\int_{1}^{+\infty}\frac{1}{x^{p}}\ud x$
\end_inset

, (
\begin_inset Formula $p\in\RR$
\end_inset

) 仅在
\begin_inset Formula $p>1$
\end_inset

时收敛.
\end_layout

\begin_layout Paragraph
例7.2.2
\end_layout

\begin_layout Standard
\begin_inset Formula $\int_{-\infty}^{\infty}\frac{1}{1+x^{2}}\ud x=\arctan x\mid_{-\infty}^{\infty}=\frac{\pi}{2}-\left(-\frac{\pi}{2}\right)=\pi$
\end_inset

.
\end_layout

\begin_layout Paragraph
定义7.2.2 (瑕积分)
\end_layout

\begin_layout Standard
设函数
\begin_inset Formula $f$
\end_inset

在任何区间
\begin_inset Formula $[a',b]$
\end_inset

, (
\begin_inset Formula $a<a'<b$
\end_inset

) 上均Riemann可积, 如果极限
\begin_inset Formula 
\[
\lim_{a'\to a+}\int_{a'}^{b}f(x)\ud x
\]

\end_inset

存在且有限, 则称瑕积分
\begin_inset Formula $\int_{a}^{b}f(x)\ud x$
\end_inset

存在或收敛, 记为
\begin_inset Formula 
\[
\int_{a}^{b}f(x)\ud x=\lim_{a'\to a+}\int_{a'}^{b}f(x)\ud x,
\]

\end_inset

否则称瑕积分
\begin_inset Formula 
\[
\int_{a}^{b}f(x)\ud x=\lim_{a'\to a+}\int_{a'}^{b}f(x)\ud x,
\]

\end_inset

否则称瑕积分
\begin_inset Formula $\int_{a}^{b}f(x)\ud x$
\end_inset

不存在或发散.
 
\end_layout

\begin_layout Standard
如果
\begin_inset Formula $f$
\end_inset

在
\begin_inset Formula $a$
\end_inset

附近无界, 则
\begin_inset Formula $f$
\end_inset

在
\begin_inset Formula $[a,b]$
\end_inset

上不是Riemann可积的, 称
\begin_inset Formula $a$
\end_inset

为
\begin_inset Formula $f$
\end_inset

的瑕点.
\end_layout

\begin_layout Standard
无穷积分和瑕积分统称为广义积分, 也称为反常积分.
\end_layout

\begin_layout Standard
运算法则: 分部积分, 变量替换, 积分区间可加性, 线性性质.
\end_layout

\begin_layout Paragraph
例7.2.3
\end_layout

\begin_layout Standard
瑕积分
\begin_inset Formula $\int_{0}^{1}\frac{1}{x^{p}}\ud x$
\end_inset

仅在
\begin_inset Formula $p<1$
\end_inset

时收敛.
\end_layout

\begin_layout Paragraph
例7.2.5
\end_layout

\begin_layout Standard
\begin_inset Formula $\int_{0}^{1}\ln x\ud x=\lim_{\epsilon\to0+}\int_{\epsilon}^{1}\ln x\ud x=\lim_{\epsilon\to0+}\left(x\ln x-x\right)\mid_{\epsilon}^{1}=-1$
\end_inset

.
\end_layout

\begin_layout Paragraph
例7.2.6
\end_layout

\begin_layout Standard
求Fresnel积分
\begin_inset Formula $\int_{0}^{+\infty}\cos(x^{2})\ud x$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{1}^{+\infty}\cos\left(x^{2}\right)dx=\frac{1}{2}\int_{1}^{+\infty}\frac{\cos t}{\sqrt{t}}dt.
\]

\end_inset


\begin_inset Formula 
\[
\begin{aligned}\left|\int_{A}^{B}\frac{\cos t}{\sqrt{t}}dt\right| & =\left|\frac{\sin t}{\sqrt{t}}\right|_{A}^{B}+\frac{1}{2}\int_{A}^{B}\frac{\sin t}{t^{\frac{3}{2}}}dt\mid\\
 & \leqslant\frac{1}{\sqrt{A}}+\frac{1}{\sqrt{B}}+\frac{1}{2}\int_{A}^{B}t^{-\frac{3}{2}}dt=\frac{2}{\sqrt{A}}\rightarrow0\quad(B>A\rightarrow+\infty).
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\int_{0}^{+\infty}\cos(x^{2})\ud x & =\frac{1}{2}\int_{0}^{+\infty}\frac{\cos t}{\sqrt{t}}\ud t\\
 & =\frac{1}{2}\int_{0}^{+\infty}\cos t\left(\frac{2}{\sqrt{\pi}}\int_{0}^{+\infty}\ue^{-tx^{2}}\ud x\right)\ud t\\
 & =\frac{1}{\sqrt{\pi}}\int_{0}^{+\infty}\int_{0}^{+\infty}\ue^{-tx^{2}}\cos t\ud t\ud x\\
 & =\frac{1}{\sqrt{\pi}}\int_{0}^{+\infty}\frac{x^{2}}{1+x^{4}}\ud x=\frac{1}{2\sqrt{\pi}}\int_{0}^{\pi/2}\tan^{1/2}t\ud t\\
 & =\frac{1}{2\sqrt{\pi}}\cdot\frac{1}{2}B\left(\frac{3/2}{2},\frac{1/2}{2}\right)=\frac{1}{4\sqrt{\pi}}\cdot\frac{\Gamma(1/4)\Gamma(3/4)}{\Gamma(1)}\\
 & =\frac{1}{4\sqrt{\pi}}\cdot\frac{\pi}{\sin\frac{\pi}{4}}=\frac{\sqrt{2\pi}}{4}.
\end{align*}

\end_inset

其中
\begin_inset Formula 
\[
\int\ue^{-tx^{2}}\cos t\ud t=\frac{\ue^{-tx^{2}}\left(-\cos t\cdot x^{2}+\sin t\right)}{1+x^{4}},
\]

\end_inset

所以
\begin_inset Formula 
\[
\int_{0}^{+\infty}\ue^{-tx^{2}}\ud x=\frac{1}{\sqrt{t}}\int_{0}^{+\infty}\ue^{-x^{2}}\ud x=\frac{\sqrt{\pi}}{2\sqrt{t}}.
\]

\end_inset

综上, 并类似的证明
\begin_inset Formula 
\[
\int_{\RR}\cos(x^{2})\ud x=\sqrt{\frac{\pi}{2}},\qquad\int_{\RR}\sin(x^{2})\ud x=\sqrt{\frac{\pi}{2}}.
\]

\end_inset


\end_layout

\begin_layout Paragraph
例.
\end_layout

\begin_layout Standard
设函数
\begin_inset Formula $f:[1,\infty)\to\RR$
\end_inset

定义为
\begin_inset Formula $f(x)=\frac{\sin x}{x}$
\end_inset

.
\end_layout

\begin_layout Standard
(i) 证明反常积分
\begin_inset Formula $\int_{1}^{\infty}f(x)\ud x$
\end_inset

收敛.
\end_layout

\begin_layout Standard
(ii) 证明反常积分
\begin_inset Formula $\int_{1}^{\infty}\left|f(x)\right|\ud x$
\end_inset

发散.
\end_layout

\begin_layout Standard
此例说明对于反常积分, 
\begin_inset Formula $f\in\mathcal{R}[a,b]$
\end_inset

并不能推出
\begin_inset Formula $\left|f\right|$
\end_inset

也属于
\begin_inset Formula $\mathcal{R}[a,b]$
\end_inset

.
\end_layout

\begin_layout Standard
pf.
 (i) 有分部积分
\begin_inset Formula 
\[
\int_{1}^{T}f(x)\ud x=\left[-\frac{\cos x}{x}\right]_{1}^{T}-\int_{1}^{T}\frac{\cos x}{x^{2}}\ud x,\qquad\forall T>1.
\]

\end_inset

所以只需证明广义积分
\begin_inset Formula $\int_{1}^{\infty}\frac{\cos x}{x^{2}}\ud x$
\end_inset

收敛.
 由于当
\begin_inset Formula $A_{2}>A_{1}>1$
\end_inset

时有
\begin_inset Formula 
\[
\left|\int_{A_{1}}^{A_{2}}\frac{\cos x}{x^{2}}\ud x\right|\le\int_{A_{1}}^{A_{2}}\frac{\left|\cos x\right|}{x^{2}}\ud x\le\int_{A_{1}}^{A_{2}}\frac{1}{x^{2}}\ud x=\frac{1}{A_{1}}-\frac{1}{A_{2}}\le\frac{1}{A_{1}}.
\]

\end_inset

则对于任意的
\begin_inset Formula $\varepsilon>0$
\end_inset

, 取
\begin_inset Formula $M>1$
\end_inset

使得
\begin_inset Formula $\frac{1}{M}<\varepsilon$
\end_inset

.
 只要
\begin_inset Formula $A_{2}>A_{1}>M$
\end_inset

, 就有
\begin_inset Formula 
\[
\left|\int_{A_{1}}^{A_{2}}\frac{\cos x}{x^{2}}\ud x\right|\le\frac{1}{A_{1}}<\frac{1}{M}<\varepsilon.
\]

\end_inset

由Cauchy判别法, 反常积分收敛.
\end_layout

\begin_layout Standard
(ii) 如果反常积分收敛.
 由于
\begin_inset Formula $\left|f\right|\ge0$
\end_inset

, 对于任意的
\begin_inset Formula $N\in\NN$
\end_inset

, 
\begin_inset Formula 
\[
\int_{1}^{\infty}\left|f(x)\right|\ud x\ge\int_{\pi}^{(N+1)}\frac{\left|\sin x\right|}{x}\ud x=\sum_{k=1}^{N}\int_{k\pi}^{(k+1)\pi}\frac{\left|\sin x\right|}{x}\ud x,
\]

\end_inset

对于任意的
\begin_inset Formula $k\in\NN$
\end_inset

, 做变量替换
\begin_inset Formula $x=t+k\pi$
\end_inset

, 则有
\begin_inset Formula 
\[
