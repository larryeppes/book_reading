\begin_layout Paragraph
命题3.5.1
\end_layout

\begin_layout Standard
设
\begin_inset Formula $f\in C[a,b]$
\end_inset

, 
\begin_inset Formula $f_{n}(x)$
\end_inset

是分段线性函数, 是将
\begin_inset Formula $[a,b]$
\end_inset

进行
\begin_inset Formula $n$
\end_inset

等分, 分点
\begin_inset Formula $x_{i}=a+\frac{i}{n}(b-a)$
\end_inset

, 在
\begin_inset Formula $x\in[x_{i-1},x_{i}]$
\end_inset

时
\begin_inset Formula 
\[
f_{n}(x)=l_{i}(x)=f(x_{i-1})+\frac{f(x_{i})-f(x_{i-1})}{x_{i}-x_{i-1}}(x-x_{i-1}).
\]

\end_inset

则
\begin_inset Formula $\forall\epsilon>0$
\end_inset

, 
\begin_inset Formula $\exists N=N(\epsilon)$
\end_inset

, 当
\begin_inset Formula $n>N$
\end_inset

时, 
\begin_inset Formula 
\[
\left|f(x)-f_{n}(x)\right|<\epsilon,\quad\forall x\in[a,b].
\]

\end_inset

即
\begin_inset Formula $f_{n}(x)\rightrightarrows f(x)$
\end_inset

.
 进而
\begin_inset Formula 
\begin{align*}
\int_{a}^{b}f(x)\ud x & =\lim_{n\to\infty}\int_{a}^{b}f_{n}(x)\ud x\\
 & =\lim_{n\to\infty}\sum_{i=1}^{n}\frac{1}{2}\left[f(x_{i-1})+f(x_{i})\right]\cdot\frac{b-a}{n}\\
 & =\lim_{n\to\infty}\sum_{i=1}^{n}f(x_{i})\Delta x_{i}.
\end{align*}

\end_inset


\end_layout

\begin_layout Paragraph
积分的基本性质
\end_layout

\begin_layout Standard
约定
\begin_inset Formula $\int_{a}^{a}f(x)\ud x=0$
\end_inset

, 
\begin_inset Formula $\int_{b}^{a}f(x)\ud x=-\int_{a}^{b}f(x)\ud x$
\end_inset

.
\end_layout

\begin_layout Standard
(1) (线性性) 
\begin_inset Formula $f,g\in C[a,b]$
\end_inset

, 
\begin_inset Formula $\alpha,\beta\in\RR$
\end_inset

, 则
\begin_inset Formula 
\[
\int_{a}^{b}\left(\alpha f(x)+\beta g(x)\right)\ud x=\alpha\int_{a}^{b}f(x)\ud x+\beta\int_{a}^{b}g(x)\ud x.
\]

\end_inset


\end_layout

\begin_layout Standard
(2) 若
\begin_inset Formula $\left|f(x)\right|\le M$
\end_inset

, 
\begin_inset Formula $\forall x\in[a,b]$
\end_inset

, 则
\begin_inset Formula 
\[
\left|\int_{a}^{b}f(x)\ud x\right|\le M(b-a).
\]

\end_inset


\end_layout

\begin_layout Standard
(3) (保序性) 若
\begin_inset Formula $f\ge g$
\end_inset

, 
\begin_inset Formula $f,g\in C[a,b]$
\end_inset

, 则
\begin_inset Formula $\int_{a}^{b}f\ge\int_{a}^{b}g$
\end_inset

.
 特别地, 
\begin_inset Formula 
\[
\left|\int_{a}^{b}f(x)\ud x\right|\le\int_{a}^{b}\left|f(x)\right|\ud x.
\]

\end_inset


\end_layout

\begin_layout Standard
(4) (区间可加性) 设
\begin_inset Formula $f\in C(I)$
\end_inset

, 
\begin_inset Formula $a,b,c\in I$
\end_inset

, 则
\begin_inset Formula 
\[
\int_{a}^{c}f(x)\ud x=\int_{a}^{b}f(x)\ud x+\int_{b}^{c}f(x)\ud x.
\]

\end_inset


\end_layout

\begin_layout Standard
(5) 若
\begin_inset Formula $f(x)\in C[a,b]$
\end_inset

, 非负, 则
