\begin_layout Paragraph
定理 8.2.3 (Kummer).
 
\end_layout

\begin_layout Standard
设 
\begin_inset Formula $\sum_{n=1}^{\infty}a_{n}$
\end_inset

, 
\begin_inset Formula $\sum_{n=1}^{\infty}b_{n}$
\end_inset

 为正项级数, 如果 
\begin_inset Formula $n$
\end_inset

 充分大时 
\end_layout

\begin_layout Standard
(1) 
\begin_inset Formula $\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}}\geqslant\lambda>0$
\end_inset

, 则 
\begin_inset Formula $\sum_{n=1}^{\infty}a_{n}$
\end_inset

 收敛; 
\end_layout

\begin_layout Standard
(2) 
\begin_inset Formula $\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}}\leqslant0$
\end_inset

 且 
\begin_inset Formula $\sum_{n=1}^{\infty}b_{n}$
\end_inset

 发散, 则 
\begin_inset Formula $\sum_{n=1}^{\infty}a_{n}$
\end_inset

 发散.
\end_layout

\begin_layout Standard
pf.
 (1) 条件可改写为 
\begin_inset Formula 
\[
a_{n+1}\leqslant\frac{1}{\lambda}\left(\frac{a_{n}}{b_{n}}-\frac{a_{n+1}}{b_{n+1}}\right),\quad\forall n\geqslant N\text{. }
\]

\end_inset


\end_layout

\begin_layout Standard
这说明当 
\begin_inset Formula $n\geqslant N$
\end_inset

 时 
\begin_inset Formula 
\[
\begin{aligned}S_{n+1} & =S_{N}+\sum_{k=N}^{n}a_{k+1}\\
 & \leqslant S_{N}+\frac{1}{\lambda}\sum_{k=N}^{n}\left(\frac{a_{k}}{b_{k}}-\frac{a_{k+1}}{b_{k+1}}\right)\\
 & =S_{N}+\frac{1}{\lambda}\left(\frac{a_{N}}{b_{N}}-\frac{a_{n+1}}{b_{n+1}}\right)\\
 & \leqslant S_{N}+\frac{1}{\lambda}\frac{a_{N}}{b_{N}}
\end{aligned}
\]

\end_inset

即 
\begin_inset Formula $\left\{ S_{n}\right\} $
\end_inset

 有上界, 从而 
\begin_inset Formula $\sum_{n=1}^{\infty}a_{n}$
\end_inset

 收敛.
 
\end_layout

\begin_layout Standard
(2) 由 
\begin_inset Formula 
\[
\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}}\leqslant0
\]

\end_inset

可知 
\begin_inset Formula 
\[
\frac{a_{n}}{b_{n}}\leqslant\frac{a_{n+1}}{b_{n+1}},
\]

\end_inset

即 
\begin_inset Formula $\left\{ \frac{a_{n}}{b_{n}}\right\} $
\end_inset

 关于 
\begin_inset Formula $n$
\end_inset

 单调递增, 从而 
\begin_inset Formula $a_{n}\geqslant\frac{a_{1}}{b_{1}}b_{n}$
\end_inset

, 因此由 
\begin_inset Formula $\sum_{n=1}^{\infty}b_{n}$
\end_inset

 发散知 
\begin_inset Formula $\sum_{n=1}^{\infty}a_{n}$
\end_inset

 也发散.
\end_layout

\begin_layout Paragraph
Kummer判别法推d'Alembert判别法
\end_layout

\begin_layout Standard
取
\begin_inset Formula $b_{n}=1$
\end_inset

, 则当
\begin_inset Formula $n$
\end_inset

充分大, 有
\begin_inset Formula $\frac{a_{n+1}}{a_{n}}\le q<1$
\end_inset

时, 有
\begin_inset Formula 
\[
\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}}\ge\frac{1}{q}-1>0,
\]

\end_inset

所以由Kummer判别法有
\begin_inset Formula $\sum a_{n}$
\end_inset

收敛.
 当
\begin_inset Formula $n$
\end_inset

充分大满足
\begin_inset Formula $\frac{a_{n+1}}{a_{n}}\ge1$
\end_inset

时, 有
\begin_inset Formula 
\[
\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}}\le1-1=0,
\]

\end_inset

再由Kummer判别法和
\begin_inset Formula $\sum1$
\end_inset

发散, 知
\begin_inset Formula $\sum a_{n}$
\end_inset

发散.
\end_layout

\begin_layout Paragraph
Kummer判别法证明Raabe判别法
\end_layout

\begin_layout Standard
取
\begin_inset Formula $b_{n}=\frac{1}{n}$
\end_inset

, 当
\begin_inset Formula $n$
\end_inset

充分大时, 如果有
\begin_inset Formula $n\left(\frac{a_{n}}{a_{n+1}}-1\right)\ge\mu>1$
\end_inset

, 则
\begin_inset Formula 
\[
\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}}\ge n\left(1+\frac{\mu}{n}\right)-(n+1)=\mu-1>0,
\]

\end_inset

由Kummer判别法, 
\begin_inset Formula $\sum a_{n}$
\end_inset

收敛.
\end_layout

\begin_layout Standard
当
\begin_inset Formula $n$
\end_inset

充分大时, 如果有
\begin_inset Formula $n\left(\frac{a_{n}}{a_{n+1}}-1\right)\le1$
\end_inset

, 则
\begin_inset Formula 
\[
\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}}\le n\left(1+\frac{1}{n}\right)-(n+1)=0,
\]

\end_inset

由Kummer判别法以及
\begin_inset Formula $\sum\frac{1}{n}$
\end_inset

是发散的, 所以
\begin_inset Formula $\sum a_{n}$
\end_inset

也发散.
\end_layout

\begin_layout Paragraph
Kummer判别法推出Gauss判别法
\end_layout

\begin_layout Standard
取
\begin_inset Formula $b_{n}=\frac{1}{n\ln n}$
\end_inset

, 当
\begin_inset Formula $n>N$
\end_inset

充分大时, 如果有
\begin_inset Formula $\theta>1$
\end_inset

使得
\begin_inset Formula 
\[
\frac{a_{n}}{a_{n+1}}=1+\frac{\theta}{n}+o\left(\frac{1}{n\ln n}\right).
\]

\end_inset

则
\begin_inset Formula 
\begin{align*}
\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}} & ={\color{magenta}n\ln n\left(1+\frac{\theta}{n}+o\left(\frac{1}{n\ln n}\right)\right)}-(n+1)\ln(n+1)\\
 & ={\color{magenta}(n+1)\ln n+(\theta-1)\ln n+o(1)}-n\ln(n+1)-\ln(n+1)\\
 & =(\theta-1)\ln n+o(1)-(n+1)\left(\frac{1}{n}+o\left(\frac{1}{n}\right)\right)\\
 & \ge(\theta-1)\ln N>0
\end{align*}

\end_inset

所以
\begin_inset Formula $\sum a_{n}$
\end_inset

收敛; 当
\begin_inset Formula $n>N$
\end_inset

充分大时, 如果有
\begin_inset Formula $\theta\le1$
\end_inset

使得
\begin_inset Formula 
\[
\frac{a_{n}}{a_{n+1}}=1+\frac{\theta}{n}+o\left(\frac{1}{n\ln n}\right).
\]

\end_inset

则
\begin_inset Formula 
\begin{align*}
\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}} & ={\color{magenta}n\ln n\left(1+\frac{\theta}{n}+o\left(\frac{1}{n\ln n}\right)\right)}-(n+1)\ln(n+1)\\
 & ={\color{magenta}(n+1)\ln n+(\theta-1)\ln n+o(1)}-n\ln(n+1)-\ln(n+1)\\
 & =(\theta-1)\ln n+o(1)-(n+1)\left(\frac{1}{n}+o\left(\frac{1}{n}\right)\right)\\
 & \le0
\end{align*}

\end_inset

由Kummer判别法以及
\begin_inset Formula $\sum\frac{1}{n\ln n}$
\end_inset

发散, 所以
\begin_inset Formula $\sum a_{n}$
\end_inset

也发散.
\end_layout

