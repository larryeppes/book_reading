\begin_layout Paragraph
例7.3.5
\end_layout

\begin_layout Standard
判断
\begin_inset Formula $\int_{1}^{+\infty}\cos x^{p}\ud x$
\end_inset

, (
\begin_inset Formula $p>1$
\end_inset

), 的敛散性.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{1}^{\infty}\cos t\cdot t^{\frac{1}{p}-1}\ud t,
\]

\end_inset

取
\begin_inset Formula $B>A\gg1$
\end_inset

, 则
\begin_inset Formula 
\[
\left|\int_{A}^{B}\frac{\cos t}{t^{1-\frac{1}{p}}}\ud t\right|=\left|\frac{1}{A^{1-1/p}}\int_{A}^{\xi}\cos t\ud t+\frac{1}{B^{1-1/p}}\int_{\xi}^{B}\cos t\ud t\right|\le\frac{4}{A^{1-1/p}}\to0,\quad A\to+\infty.
\]

\end_inset

但
\begin_inset Formula 
\[
\left|\cos x^{p}\right|\ge\cos^{2}x^{p}=\frac{1}{2}\left(1+\cos2x^{p}\right),
\]

\end_inset

反证
\begin_inset Formula $\int\left|\cos x^{p}\right|$
\end_inset

不收敛.
\end_layout

\begin_layout Paragraph
定理 
\begin_inset Formula $7.3.3$
\end_inset

 (Dirichlet).
 
\end_layout

\begin_layout Standard
设 
\begin_inset Formula $F(A)=\int_{a}^{A}f(x)dx$
\end_inset

 在 
\begin_inset Formula $[a,+\infty)$
\end_inset

 中有界, 函数 
\begin_inset Formula $g(x)$
\end_inset

 在 
\begin_inset Formula $[a,+\infty)$
\end_inset

 中单调, 且 
\begin_inset Formula $\lim_{x\rightarrow+\infty}g(x)=0$
\end_inset

, 则积分 
\begin_inset Formula $\int_{a}^{+\infty}f(x)g(x)dx$
\end_inset

 收敛.
\end_layout

\begin_layout Standard
pf.
 
\begin_inset Formula $\left|F(A)\right|\le C$
\end_inset

, 
\begin_inset Formula $\forall A\ge a$
\end_inset

.
 所以
\begin_inset Formula 
\[
\left|\int_{A}^{B}f(x)\ud x\right|\le2C,\quad\forall A,B\ge a.
\]

\end_inset


\begin_inset Formula $g(x)=o(1)$
\end_inset

, 
\begin_inset Formula $x\to+\infty$
\end_inset

.
 所以
\begin_inset Formula $\forall\epsilon>0$
\end_inset

, 
\begin_inset Formula $\exists M>0$
\end_inset

, s.t.
 
\begin_inset Formula $\forall x>M$
\end_inset

, 
\begin_inset Formula $\left|g(x)\right|\le\frac{\epsilon}{4C}$
\end_inset

.
\begin_inset Formula 
\begin{align*}
\left|\int_{A}^{B}f(x)g(x)\ud x\right| & =\left|g(A)\int_{A}^{\xi}f(x)\ud x+g(B)\int_{\xi}^{B}f(x)\ud x\right|\\
 & \le\frac{\epsilon}{4C}\cdot2C\cdot2=\epsilon.
\end{align*}

\end_inset


\end_layout

\begin_layout Paragraph
例7.3.6.
\end_layout

\begin_layout Standard
判断积分
\begin_inset Formula $\int_{0}^{+\infty}\frac{\sin x}{x^{p}}\ud x$
\end_inset

, (
\begin_inset Formula $0<p<2$
\end_inset

) 的敛散性.
