\begin_layout Paragraph
习题12
\end_layout

\begin_layout Standard
设 
\begin_inset Formula $f,g$
\end_inset

 为两个周期函数, 如果 
\begin_inset Formula $\lim_{x\rightarrow+\infty}[f(x)-g(x)]=0$
\end_inset

, 则 
\begin_inset Formula $f=g$
\end_inset

.
 
\end_layout

\begin_layout Standard
注: 
\begin_inset Formula $f,g$
\end_inset

的周期比可能是无理数, 所以
\begin_inset Formula $f-g$
\end_inset

可能不是周期函数.
\end_layout

\begin_layout Standard
pf.
 设
\begin_inset Formula $f$
\end_inset

的周期为
\begin_inset Formula $T$
\end_inset

, 
\begin_inset Formula $g$
\end_inset

的周期为
\begin_inset Formula $S$
\end_inset

.
 则
\begin_inset Formula 
\begin{align*}
f(x)-g(x) & =f(x+nT)-g(x+nS)\\
 & =f(x+nT)-g(x+nT)\\
 & \quad+g(x+nT{\color{magenta}+nS})-f(x+nS{\color{magenta}+nT})\\
 & \quad+f(x+nS)-g(x+nS)\\
 & =\lim_{n\to\infty}f(x+nT)-g(x+nT)\\
 & \quad+\lim_{n\to\infty}g(x+nT{\color{magenta}+nS})-f(x+nS{\color{magenta}+nT})\\
 & \quad+\lim_{n\to\infty}f(x+nS)-g(x+nS)\\
 & =0+0+0.
\end{align*}

\end_inset


\end_layout

\begin_layout Paragraph
习题13
\end_layout

\begin_layout Standard
设 
\begin_inset Formula $\lim_{x\rightarrow0}f(x)=0,\lim_{x\rightarrow0}\frac{1}{x}[f(2x)-f(x)]=0$
\end_inset

, 证明 
\begin_inset Formula $\lim_{x\rightarrow0}\frac{f(x)}{x}=0$
\end_inset

.
\end_layout

\begin_layout Standard
pf.
 
\begin_inset Formula $\forall\epsilon>0$
\end_inset

, 
\begin_inset Formula $\exists X>0$
\end_inset

, s.t.
 
\begin_inset Formula $\forall x>X$
\end_inset

, 
\begin_inset Formula $\left|f(x)\right|<\epsilon$
\end_inset

, 且
\begin_inset Formula 
\[
\left|f(2x)-f(x)\right|\le\epsilon x.
\]

\end_inset

所以
\begin_inset Formula 
\[
\left|f(x)-f\left(\frac{x}{2^{n}}\right)\right|\le\epsilon x.
\]

\end_inset

令
\begin_inset Formula $n\to\infty$
\end_inset

即可.
\end_layout

