\end_layout

\begin_layout Paragraph
定理3.1.8
\end_layout

\begin_layout Standard
(1).
 (局部有界原理) 若
\begin_inset Formula $f$
\end_inset

在
\begin_inset Formula $x_{0}$
\end_inset

处有有限极限, 则
\begin_inset Formula $f$
\end_inset

在
\begin_inset Formula $x_{0}$
\end_inset

的某空心领域内有界.
\end_layout

\begin_layout Standard
(2).
 (保序性) 
\begin_inset Formula 
\begin{align*}
\lim_{x\to x_{0}}f(x)=A,\ \lim_{x\to x_{0}}g(x)=B,\ f(x)\ge g(x), & \Longrightarrow A\ge B.\\
\lim_{x\to x_{0}}f(x)=A,\ \lim_{x\to x_{0}}g(x)=B,\ A>B, & \Longrightarrow\exists U_{x_{0}}^{\circ}\ s.t.\ f(x)>g(x),\ \forall x\in U_{x_{0}}^{\circ}.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
(3).
 (四则运算)
\end_layout

\begin_layout Paragraph
定理3.1.9 (复合函数极限)
\end_layout

\begin_layout Standard
设
\begin_inset Formula $f(y)\to A$
\end_inset

, 
\begin_inset Formula $y\to y_{0}$
\end_inset

; 
\begin_inset Formula $g(x)\to y_{0}$
\end_inset

