\end_layout

\begin_layout Paragraph
Kummer判别法推出Gauss判别法
\end_layout

\begin_layout Standard
取
\begin_inset Formula $b_{n}=\frac{1}{n\ln n}$
\end_inset

, 当
\begin_inset Formula $n>N$
\end_inset

充分大时, 如果有
\begin_inset Formula $\theta>1$
\end_inset

使得
\begin_inset Formula 
\[
\frac{a_{n}}{a_{n+1}}=1+\frac{\theta}{n}+o\left(\frac{1}{n\ln n}\right).
\]

\end_inset

则
\begin_inset Formula 
\begin{align*}
\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}} & ={\color{magenta}n\ln n\left(1+\frac{\theta}{n}+o\left(\frac{1}{n\ln n}\right)\right)}-(n+1)\ln(n+1)\\
 & ={\color{magenta}(n+1)\ln n+(\theta-1)\ln n+o(1)}-n\ln(n+1)-\ln(n+1)\\
 & =(\theta-1)\ln n+o(1)-(n+1)\left(\frac{1}{n}+o\left(\frac{1}{n}\right)\right)\\
 & \ge(\theta-1)\ln N>0
\end{align*}

\end_inset

所以
\begin_inset Formula $\sum a_{n}$
\end_inset

收敛; 当
\begin_inset Formula $n>N$
\end_inset

充分大时, 如果有
\begin_inset Formula $\theta\le1$
\end_inset

使得
\begin_inset Formula 
\[
\frac{a_{n}}{a_{n+1}}=1+\frac{\theta}{n}+o\left(\frac{1}{n\ln n}\right).
\]

\end_inset

则
\begin_inset Formula 
\begin{align*}
\frac{1}{b_{n}}\cdot\frac{a_{n}}{a_{n+1}}-\frac{1}{b_{n+1}} & ={\color{magenta}n\ln n\left(1+\frac{\theta}{n}+o\left(\frac{1}{n\ln n}\right)\right)}-(n+1)\ln(n+1)\\
 & ={\color{magenta}(n+1)\ln n+(\theta-1)\ln n+o(1)}-n\ln(n+1)-\ln(n+1)\\
 & =(\theta-1)\ln n+o(1)-(n+1)\left(\frac{1}{n}+o\left(\frac{1}{n}\right)\right)\\
 & \le0
\end{align*}

\end_inset

由Kummer判别法以及
\begin_inset Formula $\sum\frac{1}{n\ln n}$
\end_inset

发散, 所以
\begin_inset Formula $\sum a_{n}$
\end_inset

也发散.
\end_layout

